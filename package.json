{
  "name": "@josefaidt/root",
  "private": true,
  "version": "2.3.0",
  "author": "Josef Aidt <josef.aidt@gmail.com>",
  "scripts": {
    "start": "yarn workspace @josefaidt/app run start",
    "start:demo": "yarn workspace @josefaidt/demo run start",
    "build": "yarn workspace @josefaidt/app run build",
    "build:demo": "yarn workspace @josefaidt/demo run build",
    "clean": "rm -rf node_modules **/node_modules yarn.lock",
    "reload": "yarn clean; yarn install"
  },
  "keywords": [
    "gatsby"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/josefaidt/josefaidt.github.io"
  },
  "workspaces": [
    "app",
    "theme",
    "demo"
  ],
  "devDependencies": {
    "@josefaidt/eslint-config": "^0.1.9",
    "@josefaidt/prettier-config": "^0.0.2",
    "eslint": "^6.4.0",
    "husky": "^3.0.5",
    "lint-staged": "^9.3.0",
    "prettier": "^1.18.2"
  },
  "eslintConfig": {
    "extends": "@josefaidt/eslint-config",
    "parserOptions": {
      "ecmaVersion": 9,
      "sourceType": "module"
    }
  },
  "prettier": "@josefaidt/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md,mdx,json}": [
      "prettier --write",
      "git add"
    ]
  }
}
