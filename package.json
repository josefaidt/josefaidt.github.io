{
  "name": "josefaidt.dev",
  "private": true,
  "description": "my personal site",
  "version": "2.2.0",
  "author": "Josef Aidt <josef.aidt@gmail.com>",
  "scripts": {
    "start": "yarn workspace @josef/app run start",
    "develop": "yarn workspace @josef/app run develop",
    "build": "yarn workspace @josef/app run build",
    "clean": "rm -rf node_modules **/node_modules yarn.lock",
    "reload": "yarn clean; yarn install"
  },
  "devDependencies": {
    "@josefaidt/eslint-config": "^0.1.9",
    "@josefaidt/prettier-config": "0.0.2",
    "eslint": "^6.1.0",
    "husky": "^3.0.3",
    "lint-staged": "^9.2.1",
    "prettier": "^1.18.2"
  },
  "workspaces": [
    "packages/*",
    "app"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/josefaidt/josefaidt.github.io"
  },
  "bugs": {
    "url": "https://github.com/josefaidt/josefaidt.github.io/issues"
  },
  "keywords": [
    "gatsby",
    "react"
  ],
  "eslintConfig": {
    "extends": "@josefaidt/eslint-config"
  },
  "eslintIgnore": [
    "!**/.*.js"
  ],
  "prettier": "@josefaidt/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{md|mdx|json}": [
      "prettier --write",
      "git add"
    ]
  }
}
