{
  "name": "josefaidt.me",
  "private": true,
  "description": "my personal site",
  "version": "2.2.0",
  "author": "Josef Aidt <josef.aidt@gmail.com>",
  "scripts": {
    "build": "yarn workspace @josef/app run build",
    "develop": "yarn workspace @josef/app run develop",
    "start": "yarn workspace @josef/app run start",
    "reload": "rimraf node_modules **/node_modules; yarn install"
  },
  "devDependencies": {
    "@josefaidt/eslint-config": "^0.1.7",
    "eslint": "^5.16.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0",
    "rimraf": "^2.6.3"
  },
  "husky": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "eslint --config .config/.eslintrc.js --ignorePath .config/.eslintignore --fix",
      "git add"
    ],
    "*.{md,mdx}": [
      "prettier --config .config/.prettierrc.js --write",
      "git add"
    ]
  },
  "workspaces": [
    "packages/*",
    "app"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/josefaidt/josefaidt.github.io"
  },
  "bugs": {
    "url": "https://github.com/josefaidt/josefaidt.github.io/issues"
  },
  "keywords": [
    "gatsby",
    "react"
  ]
}